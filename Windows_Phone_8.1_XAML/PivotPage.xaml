                        </VisualState>
                        <VisualStateGroup.Transitions>
                          <VisualTransition From="Pressed"
                                                              To="Normal">
                            <Storyboard>
                              <PointerUpThemeAnimation Storyboard.TargetName="TiltContainer" />
                            </Storyboard>
                          </VisualTransition>
                        </VisualStateGroup.Transitions>
                      </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>
